#include "/Engine/Public/Platform.ush"

float Multiplier;
uint ElementCount;

RWStructuredBuffer<float> ClothData;

[numthreads(64, 1, 1)]
void MainCS(uint3 ThreadId : SV_DispatchThreadID)
{
    uint Index = ThreadId.x;
    
    if (Index >= ElementCount)
        // Prevent out-of-bounds execution (Crucial now that ElementCount is dynamic)
        return;
    
    ClothData[Index] = ClothData[Index] * Multiplier;
}